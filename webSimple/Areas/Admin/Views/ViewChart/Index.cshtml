@using Newtonsoft.Json;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
@*<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>*@
<script src="~/Areas/Admin/Assets/js/scripts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Thông số</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
            <li class="breadcrumb-item active">Thông số</li>
        </ol>
        <div class="card mb-4">
            
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area mr-1"></i>
                Lượt xem
            </div>
            <div class="card-body"><canvas id="horizontalBar"></canvas></div>
            <script>
                var ctxPA = document.getElementById("horizontalBar").getContext('2d');
                var myPolarChart = new Chart(ctxPA, {
                    type: 'horizontalBar',
                    data: {
                        labels: @Html.Raw(JsonConvert.SerializeObject(ViewBag.LabelHorizontalBarChart)),
                        datasets: [{
                            "label": "Lượt xem",
                            "data": @Html.Raw(JsonConvert.SerializeObject(ViewBag.Data)),
                            "fill": false,
                            "backgroundColor": "rgba(75, 192, 192, 0.2)",
                            "borderColor": "rgb(75, 192, 192)",
                            "borderWidth": 1
                         }]
                    },
                    "options": {
                        "scales": {
                            "xAxes": [{
                                "ticks": {
                                    "beginAtZero": true
                                }
                            }]
                        }
                    }
                });
            </script>
        </div>
 
    </div>
</main>