@model webSimple.Models.About

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div style="padding: 4rem;">
    <h2 class="shadow-lg p-3 mb-5 bg-white rounded text-center">About</h2>

    @using (Html.BeginForm("Create","About",FormMethod.Post, new { @class="text-center"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="form-group align-content-center align-center justify-content-center text-center">
                <label class = "control-label col-md-2">Tiêu Đề</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center bg-light" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nội dung</label>
                <div class="d-block">
                    @Html.TextAreaFor(model => model.Content, new { @type="text", @class = "form-control bg-light", @row="5", @cols="40", @style="width: 100%; height: 450px"})
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tác giả</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control text-center bg-light" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sủ dụng giới thiệu này</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control text-center bg-light" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <div class="col-md-offset-2 text-center">
                    <input type="submit" value="Lưu" class="btn btn-lg btn-success" />
                    <a href="@Url.Action("Index", "About")" class="btn btn-lg btn-danger">Hủy</a>
                </div>
            </div>
        </div>
    }
</div>