@model webSimple.Models.About

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div style="padding: 4rem;">
    <h2 class="shadow-lg p-3 mb-5 bg-white rounded text-center">About</h2>

   <div class="form-horizontal text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group align-content-center align-center justify-content-center text-center">
                <label class="control-label col-md-2">Tiêu Đề</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center bg-light" , @disabled= "disabled" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nội dung</label>
                <div class="d-block">
                    @Html.TextAreaFor(model => model.Content, new { @type = "text", @class = "form-control bg-light", @row = "5", @cols = "40", @style = "width: 100%; height: 450px", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tác giả</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control text-center bg-light", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sủ dụng giới thiệu này</label>
                <div class="d-block">
                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control text-center bg-light", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <div class="col-md-offset-2 text-center">
                    <a href="@Url.Action("Edit", "About", new { id = Model.Id})" class="btn btn-lg btn-info">Sửa</a>
                    <a href="@Url.Action("Index", "About")" class="btn btn-lg btn-danger">Quay về</a>
                </div>
            </div>
        </div>
</div>